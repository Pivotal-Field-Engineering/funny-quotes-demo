@{
    ViewData["Title"] = "Home Page";
}
@model string

@section Scripts {
    <script>
        var serviceUrl = "@ViewBag.ServiceUrl";
        $("#btnFortune").click(function() {
            $.ajax(serviceUrl + "api/fortunes/random")
                .success(function(result) {
                    $("#fortune").html(result);
                });
        });

    </script>
}

<br/>
<table style="width: 50%;">
    <tr style="border: 3px double blue; height: 300px;">
        <td id="fortune" colspan="2">@Model</td>
    </tr>
    <tr>
        <td colspan="2">
            <form asp-controller="Home" asp-action="Fortune" method="post">
                <button type="submit">Show me fortune</button>
            </form>
            @*                <button id="btnFortune">Show me fortune</button>*@
        </td>
    </tr>
</table>